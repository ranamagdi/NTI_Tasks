{{>navbar}}

    <section class="container my-5">

        <div>
            <form>
                <input class="form-control mb-3" name="searchKey">
                <input type="submit" class="btn btn-success" value="Search">
            </form>
        </div>
        <table class="table table-stripped mt-4">
            <thead>
                <tr>
                <th>#</th>
                <th>Name</th>
                <th>Barcode</th>
                <th>Description</th>
                <th>Price before the offer</th>
                <th>Price after the offer</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {{#if  (hasproducts && !isActive)}}
                {{#each  allProducts}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{barcode}}</td>
                    <td>{{description}}</td>
                    <td>{{pricebefore}}</td>
                    <td>{{priceafter}}</td>
                    <td> {{status}} </td>

                    <td>
                        <a href="/show/{{id}}" class="btn btn-success mx-2">Show</a>
                        <a href="/edit/{{id}}" class="btn btn-warning mx-2">Edit</a>
                        <a href="/delete/{{id}}" class="btn btn-danger mx-2">Delete</a>
                    </td>
                </tr>
                {{/each}}

                {{else}}
                <tr class="bg-danger">
                    <td colSpan="5" class="text-center">No products Found</td>
                </tr>
                {{/if}}
            </tbody>
        </table>
    </section>
{{>footer}}
